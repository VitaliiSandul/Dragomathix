<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HippodromeFragment"
    android:background="@drawable/back_hippodrome"
    android:clickable="true">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.41"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"
        />

    <ImageView
        android:id="@+id/player"
        android:layout_width="90dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="@id/vline_1"
        app:layout_constraintBottom_toBottomOf="@+id/hline_1"
        android:background="@drawable/horse_boy"/>

    <ImageView
        android:id="@+id/pc"
        android:layout_width="90dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="@id/vline_1"
        app:layout_constraintBottom_toBottomOf="@+id/hline_2"
        android:background="@drawable/horse_pc"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        />

    <ImageView
        android:id="@+id/window3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_20"
        app:layout_constraintBottom_toBottomOf="@id/hline_8"
        app:layout_constraintEnd_toEndOf="@id/vline_5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/vline_2"
        app:layout_constraintTop_toTopOf="@id/hline_7"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/math_expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vline_2"
        app:layout_constraintEnd_toStartOf="@id/question_mark"
        app:layout_constraintTop_toTopOf="@id/hline_7"
        app:layout_constraintBottom_toBottomOf="@id/hline_8"
        android:text="5 x 5 = "
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="100dp" />

    <TextView
        android:id="@+id/question_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/math_expression"
        app:layout_constraintEnd_toEndOf="@id/vline_5"
        app:layout_constraintTop_toTopOf="@id/hline_7"
        app:layout_constraintBottom_toBottomOf="@id/hline_8"
        android:text="\?"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginRight="100dp"/>


    <ImageButton
        android:id="@+id/btn_var1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/hline_3"
        app:layout_constraintBottom_toTopOf="@+id/hline_4"
        app:layout_constraintStart_toStartOf="@+id/vline_2"
        app:layout_constraintEnd_toEndOf="@+id/vline_3"
        android:background="@drawable/blue_button"/>

    <TextView
        android:id="@+id/txt_var1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/btn_var1"
        app:layout_constraintBottom_toBottomOf="@+id/btn_var1"
        app:layout_constraintStart_toStartOf="@+id/btn_var1"
        app:layout_constraintEnd_toEndOf="@+id/btn_var1"
        android:text="20"
        android:textStyle="bold"
        android:textSize="40dp"
        />

    <ImageView
        android:id="@+id/imgCorIncor1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/btn_var1"
        app:layout_constraintBottom_toBottomOf="@+id/btn_var1"
        app:layout_constraintEnd_toEndOf="@+id/btn_var1"
        android:src="@drawable/incorrect_answer"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/btn_var2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/hline_3"
        app:layout_constraintBottom_toTopOf="@+id/hline_4"
        app:layout_constraintStart_toStartOf="@+id/vline_4"
        app:layout_constraintEnd_toEndOf="@+id/vline_5"
        android:background="@drawable/blue_button"/>

    <TextView
        android:id="@+id/txt_var2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/btn_var2"
        app:layout_constraintBottom_toBottomOf="@+id/btn_var2"
        app:layout_constraintStart_toStartOf="@+id/btn_var2"
        app:layout_constraintEnd_toEndOf="@+id/btn_var2"
        android:text="25"
        android:textStyle="bold"
        android:textSize="40dp"
        />

    <ImageView
        android:id="@+id/imgCorIncor2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/btn_var2"
        app:layout_constraintBottom_toBottomOf="@+id/btn_var2"
        app:layout_constraintEnd_toEndOf="@+id/btn_var2"
        android:src="@drawable/correct_answer"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/btn_var3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/hline_5"
        app:layout_constraintBottom_toTopOf="@+id/hline_6"
        app:layout_constraintStart_toStartOf="@+id/vline_2"
        app:layout_constraintEnd_toEndOf="@+id/vline_3"
        android:background="@drawable/blue_button"/>

    <TextView
        android:id="@+id/txt_var3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/btn_var3"
        app:layout_constraintBottom_toBottomOf="@+id/btn_var3"
        app:layout_constraintStart_toStartOf="@+id/btn_var3"
        app:layout_constraintEnd_toEndOf="@+id/btn_var3"
        android:text="50"
        android:textStyle="bold"
        android:textSize="40dp"
        />

    <ImageView
        android:id="@+id/imgCorIncor3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/btn_var3"
        app:layout_constraintBottom_toBottomOf="@+id/btn_var3"
        app:layout_constraintEnd_toEndOf="@+id/btn_var3"
        android:src="@drawable/incorrect_answer"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/btn_var4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/hline_5"
        app:layout_constraintBottom_toTopOf="@+id/hline_6"
        app:layout_constraintStart_toStartOf="@+id/vline_4"
        app:layout_constraintEnd_toEndOf="@+id/vline_5"
        android:background="@drawable/blue_button"/>

    <TextView
        android:id="@+id/txt_var4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/btn_var4"
        app:layout_constraintBottom_toBottomOf="@+id/btn_var4"
        app:layout_constraintStart_toStartOf="@+id/btn_var4"
        app:layout_constraintEnd_toEndOf="@+id/btn_var4"
        android:text="10"
        android:textStyle="bold"
        android:textSize="40dp"
        />

    <ImageView
        android:id="@+id/imgCorIncor4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/btn_var4"
        app:layout_constraintBottom_toBottomOf="@+id/btn_var4"
        app:layout_constraintEnd_toEndOf="@+id/btn_var4"
        android:src="@drawable/incorrect_answer"
        android:layout_marginRight="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hline_score_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_score_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.84"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_score_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vline_score_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93"
        />


    <TextView
        android:id="@+id/txt_score_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/hline_score_1"
        app:layout_constraintBottom_toBottomOf="@+id/hline_score_2"
        app:layout_constraintStart_toStartOf="@+id/vline_score_1"
        app:layout_constraintEnd_toEndOf="@+id/vline_score_2"
        android:text="0"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/txt_score_pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/hline_score_1"
        app:layout_constraintBottom_toBottomOf="@+id/hline_score_2"
        app:layout_constraintStart_toStartOf="@+id/vline_score_3"
        app:layout_constraintEnd_toEndOf="@+id/vline_score_4"
        android:text="0"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/txt_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/hline_score_2"
        app:layout_constraintStart_toStartOf="@+id/vline_score_1"
        app:layout_constraintEnd_toEndOf="@+id/vline_score_2"
        android:text="@string/player"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txt_pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/hline_score_2"
        app:layout_constraintStart_toStartOf="@+id/vline_score_3"
        app:layout_constraintEnd_toEndOf="@+id/vline_score_4"
        android:text="@string/pc"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>
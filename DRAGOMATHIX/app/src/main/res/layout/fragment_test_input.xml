<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestInputFragment"
    android:background="@drawable/back_boy"
    android:clickable="true"
    android:id="@+id/cl_test">

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/glh_center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintGuide_percent="0.5"
       />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh_num_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        />

    <TextView
        android:id="@+id/toast_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv1_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv4_btn"
        app:layout_constraintTop_toTopOf="@+id/glh_window"
        app:layout_constraintBottom_toBottomOf="@+id/glh_center"
        android:text="00000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/light_green"
        android:shadowRadius="10"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@android:color/black"
        android:gravity="center"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/window"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv1_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv4_btn"
        app:layout_constraintTop_toTopOf="@+id/glh_clock"
        app:layout_constraintBottom_toBottomOf="@+id/glh_window"
        android:background="@drawable/circle_20"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/q_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/glv1_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv3_btn"
        app:layout_constraintTop_toTopOf="@+id/window"
        app:layout_constraintBottom_toBottomOf="@+id/window"
        android:text="0 x 0 = "
        android:textSize="55dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/a_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/glv3_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv4_btn"
        app:layout_constraintTop_toTopOf="@+id/window"
        app:layout_constraintBottom_toBottomOf="@+id/window"
        android:textSize="55dp"
        android:textStyle="bold"
        android:background="@drawable/textviewborder"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"
        />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/glh2_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintGuide_percent="0.65"
       />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/glh3_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintGuide_percent="0.75"
       />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/glh4_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintGuide_percent="0.85"
       />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh5_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/glv2_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.35"
       />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/glv3_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.65"
       />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/glv4_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.95"
       />

   <ImageView
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="@+id/glv1_btn"
       app:layout_constraintEnd_toEndOf="@+id/glv4_btn"
       app:layout_constraintTop_toTopOf="@+id/glh1_btn"
       app:layout_constraintBottom_toBottomOf="@+id/glh5_btn"
       android:background="@drawable/circle_10"/>

   <ImageButton
       android:id="@+id/btn_calc_7"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="@+id/glv1_btn"
       app:layout_constraintEnd_toEndOf="@+id/glv2_btn"
       app:layout_constraintTop_toTopOf="@+id/glh1_btn"
       app:layout_constraintBottom_toBottomOf="@+id/glh2_btn"
       android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_7_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_7"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_7"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_7"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_7"
        android:text="7"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <ImageButton
        android:id="@+id/btn_calc_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv1_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv2_btn"
        app:layout_constraintTop_toTopOf="@+id/glh2_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh3_btn"
        android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_4_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_4"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_4"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_4"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_4"
        android:text="4"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/btn_calc_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv1_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv2_btn"
        app:layout_constraintTop_toTopOf="@+id/glh3_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh4_btn"
        android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_1"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_1"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_1"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_1"
        android:text="1"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv1_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv2_btn"
        app:layout_constraintTop_toTopOf="@+id/glh4_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh5_btn"
        android:background="@drawable/btn_delete"
        android:src="@drawable/btn_backspace"/>

    <ImageButton
        android:id="@+id/btn_calc_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv2_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv3_btn"
        app:layout_constraintTop_toTopOf="@+id/glh1_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh2_btn"
        android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_8_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_8"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_8"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_8"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_8"
        android:text="8"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/btn_calc_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv2_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv3_btn"
        app:layout_constraintTop_toTopOf="@+id/glh2_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh3_btn"
        android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_5_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_5"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_5"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_5"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_5"
        android:text="5"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/btn_calc_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv2_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv3_btn"
        app:layout_constraintTop_toTopOf="@+id/glh3_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh4_btn"
        android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_2"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_2"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_2"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_2"
        android:text="2"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <ImageButton
        android:id="@+id/btn_calc_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_calc"
        app:layout_constraintBottom_toBottomOf="@+id/glh5_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv3_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/glv2_btn"
        app:layout_constraintTop_toTopOf="@+id/glh4_btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/calc_0_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_0"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_0"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_0"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_0"
        android:text="0"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/btn_calc_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv3_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv4_btn"
        app:layout_constraintTop_toTopOf="@+id/glh1_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh2_btn"
        android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_9_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_9"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_9"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_9"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_9"
        android:text="9"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/btn_calc_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv3_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv4_btn"
        app:layout_constraintTop_toTopOf="@+id/glh2_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh3_btn"
        android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_6_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_6"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_6"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_6"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_6"
        android:text="6"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/btn_calc_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv3_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv4_btn"
        app:layout_constraintTop_toTopOf="@+id/glh3_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh4_btn"
        android:background="@drawable/btn_calc"/>

    <TextView
        android:id="@+id/calc_3_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_calc_3"
        app:layout_constraintEnd_toEndOf="@+id/btn_calc_3"
        app:layout_constraintTop_toTopOf="@+id/btn_calc_3"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calc_3"
        android:text="3"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/btn_accept"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/glv3_btn"
        app:layout_constraintEnd_toEndOf="@+id/glv4_btn"
        app:layout_constraintTop_toTopOf="@+id/glh4_btn"
        app:layout_constraintBottom_toBottomOf="@+id/glh5_btn"
        android:background="@drawable/btn_accept"
        android:src="@drawable/btn_done"
        />


    <ImageButton
        android:id="@+id/back_button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/glh_num_test"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_button"/>

    <TextView
        android:id="@+id/txt_multiplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/glh_num_test"
        app:layout_constraintBottom_toBottomOf="@+id/glh_clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/multiplier"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txt_test_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/glh_num_test"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1/12"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />

